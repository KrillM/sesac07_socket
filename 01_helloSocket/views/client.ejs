<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/socket.io/socket.io.js"></script>
    <title>socket</title>
</head>
<body>
    <h1>Socket</h1>
    <div>
        emit ping<br/>
        on pong
    </div>
    <button onclick="krille()">krille message</button>
    <button onclick="entry()">jisu ipjang</button>

    <script>
        // connection
        const socket = io();

        // (전송할 이벤트 이름, [전송할 데이터])
        // 전송할 데이터의 형태는 자유롭게 (문자열, 숫자, 객체)
        function krille() {
            socket.emit("krille", {
                msg: "hello"
            });
        }

        // 특정 함수 안에 넣으면 여러 번 실행될 수 있다.
        // 하나만 실행할 함수가 아니라면 함수 밖에서 선언한다.
        socket.on("yena", (res) => {
            console.log(res);
        })

        function entry() {
            socket.emit("jisu")
        }

        socket.on("notice", (res) => {
            console.log(res.msg);
        })
    </script>
</body>
</html>